@model Employee

<div class="container d-flex flex-column align-items-center justify-content-center">

    <h1>Search for employee name</h1>

    <div class="mb-3">
        <form asp-action="Search" asp-controller="employee">

            <input asp-for="Name" placeholder="Enter employee's name" type="text" class="form-control mb-3" required />

            <input type="submit" value="Search" class="btn text-light btn-success"/>

            <a asp-action="index" class="btn btn-outline-dark">Employee's List</a>
        </form>
    </div>


    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
            <th>UserGender</th>
            <th>HireDate</th>
        </tr>

        @if (Model != null)
        {
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Salary</td>
                <td>@Model.UserGender</td>
                <td>@Model.HireDate</td>
            </tr>
        }
    </table>
</div>